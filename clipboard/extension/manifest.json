{
  "manifest_version": 2,
  "name": "URL modifier for Discord",
  "version": "1.3.4",
  "description": "Copies and modify url to be compliant for Discord",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab", "contextMenus"],
  "commands": {
    "duplicate_tab": {
      "suggested_key": {
        "default": "Alt+Shift+X"
      },
      "description": "Copies and modify url to be compliant for Discord"
    }
  }
}
