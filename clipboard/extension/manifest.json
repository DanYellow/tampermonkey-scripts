{
  "manifest_version": 2,
  "name": "URL modifier for Discord",
  "version": "1.0",
  "description": "Copies and modify url to be compliant for Discord",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab", "menus"]
}
